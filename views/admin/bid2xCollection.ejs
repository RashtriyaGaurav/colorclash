<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <link rel="stylesheet" href="/styleSheets/font.css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=orders" />
</head>

<body class="bg-[#d8e2dc]">

    <div class="max-w-md mx-auto pb-20 sm:px-6 px-4 bg-[#f8f9fa] min-h-screen">
        <h1 class="text-3xl text-zinc-900 font-bold p-4">Bid2x Collection</h1>

        <% collection.forEach(function(user) { %>
            <div class="bg-white rounded-lg shadow-md p-4 mb-3">
                <h2 class="text-lg text-zinc-900 font-bold"><%= user.userName %> </h2>
                <h2 class="text-lg text-zinc-900 font-bold"><%= user.color %> </h2>
                <h2 class="text-lg text-zinc-900 font-bold"><%= user.amount %> </h2>
                <h2 class="text-lg text-zinc-900 font-bold"><%= user.userEmail %> </h2>

            </div>
            <%});%>
    </div>


</body>

</html>