        <img class="object-cover" src="/images/logo.png" alt="">
      </div>

      <div class="leading-none">
        <h1 class="text-2xl font-semibold">
          <%=user.name%>
        </h1>
        <h1 class="text-blue-500 mb-3">
          <%=user.email%>
        </h1>
        <a onclick="openSettings(event)" href="" class="bg-blue-700 rounded-lg  text-white px-3">Edit Profile</a>
      </div>
    </div>

    <div id="editProfile" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-80 hidden">
