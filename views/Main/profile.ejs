            <input type="number" placeholder="Mobile No." class="m-3 p-2 rounded-lg bg-zinc-400" name="mobno"
              value=<%=user.mobno%>>
            <input type="email" placeholder="Email" class="m-3 p-2 rounded-lg bg-zinc-400" name="email"
              value=<%=user.email%>>
            <input type="submit" value="Update Profile" class="m-3 p-2 rounded-lg bg-blue-600">

          </form>
        </div>

        <!-- Close Button -->
        <button onclick="closeSettings()" class="absolute top-2 right-2 text-zinc-600 hover:text-zinc-900 text-2xl">
          ✖
        </button>
      </div>


    </div>

